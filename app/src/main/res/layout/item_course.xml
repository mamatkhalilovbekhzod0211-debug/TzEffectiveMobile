<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="14dp"
    app:cardBackgroundColor="#1A1A1A"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- IMAGE -->
        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_java"
            android:background="@drawable/bg_image_rounded"/>

        <!-- RATING CHIP -->
        <LinearLayout
            android:id="@+id/chipRating"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:gravity="center_vertical"
            android:layout_marginTop="-24dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/bg_chip_green">

            <TextView
                android:id="@+id/tvRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★ 4.9"
                android:textColor="#FFFFFF"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22 Мая 2024"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>

        <!-- TITLE -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Java-разработчик с нуля"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            android:textSize="16sp"
            android:layout_marginTop="12dp"/>

        <!-- DESCRIPTION -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_marginStart="12dp"
            android:layout_height="wrap_content"
            android:text="Освойте backend на Java..."
            android:textColor="#BBBBBB"
            android:textSize="13sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="4dp"/>

        <!-- PRICE + MORE -->
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="999 ₽"
                android:layout_marginStart="12dp"
                android:layout_marginBottom="12dp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tvMore"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="Подробнее →"
                android:layout_marginStart="12dp"
                android:textColor="#32A852"
                android:textSize="14sp"
                android:layout_gravity="end"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>